			<quantity>
				<value>3/4</value>
				<unit>cup</unit>
				<altmeasure>
					<quantity>
						<value>100</value>
						<unit>g</unit>
					</quantity>
				</altmeasure>
			</quantity>
			<variant>pastry</variant>
			<item>whole wheat flour</item>
		</ingredient>
		<ingredient>
			<quantity>
				<value>1/2</value>
				<unit>cup</unit>
				<altmeasure>
					<quantity>
						<value>65</value>
						<unit>g</unit>
					</quantity>
				</altmeasure>
			</quantity>
			<item>oat flour</item>
		</ingredient>
