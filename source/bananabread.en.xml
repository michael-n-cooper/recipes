				<value>1</value>
				<unit>cup</unit>
				<altmeasure>
					<quantity>
						<value>150</value>
						<unit>g</unit>
					</quantity>
				</altmeasure>
			</quantity>
			<variant>all purpose</variant>
			<item>flour</item>
		</ingredient>
