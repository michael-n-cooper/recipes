<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE recipe SYSTEM "../recipes.dtd">
<recipe>
	<title>Squash and Roasted Pepper Sandwich</title>
	<meta>
		<cuisine>Vegetarian</cuisine>
		<dishtype>Sandwiches</dishtype>
	</meta>
	<ingredients>
		<ingredient mainingredient="true">
			<quantity>
				<value>2</value>
				<unit>slices</unit>
			</quantity>
			<item>
				<reciperef ref="wholewheatbread" />
			</item>
		</ingredient>
		<ingredient>
			<variant>Fontina or Brie</variant>
			<item>cheese</item>
		</ingredient>
		<ingredient>
			<quantity>
				<value>1</value>
				<unit>tsp</unit>
			</quantity>
			<variant>yellow</variant>
			<item>mustard</item>
		</ingredient>
		<ingredient mainingredient="true">
			<item>
				<reciperef ref="zucchiniplanks" />
			</item>
		</ingredient>
		<ingredient mainingredient="true">
			<quantity>
				<value>1/2</value>
			</quantity>
			<item>roasted red pepper</item>
		</ingredient>
		<ingredient>
			<variant>red</variant>
			<item>onion</item>
			<preprep>thinly sliced</preprep>
		</ingredient>
		<ingredient>
			<quantity>
				<value>1</value>
				<unit>leaf</unit>
			</quantity>
			<item>lettuce</item>
		</ingredient>
	</ingredients>
	<steps>
		<step>Place slices of cheese on one piece of bread and mustard on the other.</step>
		<step>Place a couple layers of zucchini on the cheese, then add the roasted red pepper.</step>
		<step>Add the onion and lettuce and close the sandwich.</step>
	</steps>
	<serving>Slice in half to serve.</serving>
</recipe>
